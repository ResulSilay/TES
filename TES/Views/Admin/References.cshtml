@model IEnumerable<TES.Models.References_View>

@{
    ViewBag.Title = "References";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h5>References</h5>
<hr />
<table class="mdl-data-table" style="width:100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Money)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datetime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Money)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datetime)
        </td>
        <td class="select">
            @using (Html.BeginForm("Reference", "Admin", FormMethod.Get))
            {
                @Html.ActionLink("Onayla", "ApprovedInsert", new { t_id = item.TenderId })
            }
        </td>
    </tr>
}

</table>
