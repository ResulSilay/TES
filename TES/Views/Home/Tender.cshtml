@model IEnumerable<TES.Models.Tender>

@{
    ViewBag.Title = "İhaleler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Tender", "Admin", FormMethod.Get, null))
{
<div class="menu">
    @Html.ActionLink("Tümü", "Tender", new { type = -1 })
    @Html.ActionLink("Alım", "Tender", new { type = 1 })
    @Html.ActionLink("Satış", "Tender", new { type = 2 })
</div>
}

<table class="mdl-data-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)<br />
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td class="select">
                @Html.ActionLink("Detay", "Detail", new { id = item.Id })
            </td>
        </tr>
    }

</table>
